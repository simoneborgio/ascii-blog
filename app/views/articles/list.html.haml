- @articles.each_with_index do |article, index|
  .col-md-6.col-sm-12
    %a.no-decoration{href: article_path(article.uri)}
      %h4
        = fa_icon 'quote-right', class: 'article-icon'
        = article.title

      %p.text-muted
        %small
          %i
            = fa_icon 'clock-o'
            = format_date_time article.release_date

      %p
        - if article.tags
          - article.tags.split(',').each do |tag|
            %span.label.label-success.tag
              = tag.humanize

      %p
        = convert_adoc(article.preview, false)
  - if (index + 1) % 2 == 0
    .clearfix
    .col-md-6.col-md-offset-3.col-sm-hidden
      %hr
    .clearfix