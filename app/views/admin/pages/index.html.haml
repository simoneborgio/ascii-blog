%h2= t :pages

%p.text-right
  = link_to t(:new), new_admin_page_path, class: 'btn btn-primary'

%table.table
  %thead
    %tr
      %th
        = t(:page_order)
      %th
        = t(:page_name)
      %th
  %tbody
    - @pages.each do |page|
      %tr
        %td
          = page.order
        %td
          = link_to page.name, edit_admin_page_path(page)
        %td.text-right
          = link_to fa_icon('external-link'), page_path(page.uri)