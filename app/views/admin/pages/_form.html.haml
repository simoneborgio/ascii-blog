=render :partial => 'partials/form_error', :locals => { :resource => @page }

.form-group.col-sm-6
  =f.label :name, t(:page_name), class: 'control-label'
  =f.text_field :name, class: 'form-control'
.clearfix

.form-group.col-sm-6
  =f.label :order, t(:page_order), class: 'control-label'
  =f.number_field :order, class: 'form-control'
  .help-block= t(:page_order_help)
.clearfix

.form-group.col-sm-12
  =f.label :content, t(:page_content), class: 'control-label'
  =f.text_area :content, class: 'form-control', rows: 15
  .help-block= t(:page_content_help)
  
.col-sm-12.text-center
  =f.submit t(:save), class: 'btn btn-primary'